<%= render 'drawer' do %>
  <div class="relative mt-6 flex-1 px-4 flex flex-col gap-2 m-2 sm:m-10">
    <div class="flex flex-col gap-4">
      <div class="h-56">
        <a href="#">
          <img class="mx-auto h-full object-contain block dark:hidden" src="https://flowbite.s3.amazonaws.com/blocks/e-commerce/imac-front.svg" alt="">
          <img class="mx-auto hidden object-contain h-full dark:block" src="https://flowbite.s3.amazonaws.com/blocks/e-commerce/imac-front-dark.svg" alt="">
        </a>
      </div>

      <div>
        <h1 class="text-2xl font-bold text-black mb-2"><%= @product.title %> </h1>
        <p class="text-primary-600 italic mb-4"><%= @product.subtitle %> </p>

        <div class="flex items-center mb-6">
          <span class="text-3xl font-bold text-magenta-500">
            <%= number_to_currency(@product.price) %>
          </span>
        </div>
      </div>
    </div>

    <div class="grid grid-cols-2 gap-4 mb-8">
      <div>
        <h3 class="text-sm font-medium text-black">Idioma</h3>
        <p class="text-primary-600"><%= @product.productable.language %> (<%= @product.productable.language_zone %>) </p>
      </div>
      <div>
        <h3 class="text-sm font-medium text-black">Edición</h3>
        <p class="text-primary-600"><%= @product.productable.edition_number %></p>
      </div>
      <div>
        <h3 class="text-sm font-medium text-black">Páginas</h3>
        <p class="text-primary-600"><%= @product.productable.pages_number %></p>
      </div>
      <div>
        <h3 class="text-sm font-medium text-black">Portada</h3>
        <p class="text-primary-600"><%= @product.productable.cover_color %></p>
      </div>
      <div>
        <h3 class="text-sm font-medium text-black">Peso</h3>
        <p class="text-primary-600"><%= @product.productable.weight_grams %></p>
      </div>
      <div>
        <h3 class="text-sm font-medium text-black">Medidas</h3>
        <p class="text-primary-600"><%= @product.productable.dimensions %> cm</p>
      </div>
    </div>

    <div class="flex" data-controller="products--form-quantity">
      <%= form_with model: Cart::Item.new, html: { class: 'w-full' }  do |f| %>
        <label class="block mb-2 text-sm font-medium text-black dark:text-white">
          Elige la cantidad:
        </label>
        <div class="grid gap-4">
          <div class="inline-flex">
            <button type="button" class="bg-primary-100 dark:bg-primary-700 dark:hover:bg-primary-600 dark:border-primary-600 hover:bg-primary-200 border border-primary-300 rounded-s-lg p-3 h-11 focus:ring-primary-100 dark:focus:ring-primary-700 focus:ring-2 focus:outline-none" data-action="click->products--form-quantity#decrement">
              <svg class="w-3 h-3 text-black dark:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 18 2">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 1h16" />
              </svg>
            </button>

            <%= f.hidden_field :product_id, value: @product.id %>

            <%= f.text_field :quantity, class: 'w-16 border border-primary-300 h-11 text-center text-primary-900 text-sm focus:outline-none focus:ring-1 focus:ring-primary-600 focus:border-primary-600 block py-2.5 dark:bg-primary-700 dark:border-primary-600 dark:placeholder-primary-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500', placeholder: '1', required: true, value: 1, data: { action: 'input->products--form-quantity#restrictToNumbers', products__form_quantity_target: 'input' } %>
            <button type="button" class="bg-primary-100 dark:bg-primary-700 dark:hover:bg-primary-600 dark:border-primary-600 hover:bg-primary-200 border border-primary-300 rounded-e-lg p-3 h-11 focus:ring-primary-100 dark:focus:ring-primary-700 focus:ring-2 focus:outline-none" data-action="click->products--form-quantity#increment">
              <svg class="w-3 h-3 text-black dark:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 18 18">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 1v16M1 9h16" />
              </svg>
            </button>
          </div>

          <%= f.button nil, class: 'form--submit' do %>
            <svg class="-ms-2 me-2 h-5 w-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
              <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4h1.5L8 16m0 0h8m-8 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4Zm8 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4Zm.75-3H7.5M11 7H6.312M17 4v6m-3-3h6" />
            </svg>
            Agregar al carrito
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
