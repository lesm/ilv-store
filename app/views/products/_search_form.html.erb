<div class="mb-8 w-full max-w-2xl">
  <%= form_with url: products_path, method: :get, data: { search_target: 'form', action: 'submit->search#search' } do |f| %>
    <div class="relative w-full">
      <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
        <svg class="w-5 h-5 text-primary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
        </svg>
      </div>
      <%= f.text_field :q,
                       value: query,
                       placeholder: t('.placeholder'),
                       class: 'block w-full p-4 pl-10 text-sm text-primary-900 border border-primary-300 rounded-lg bg-white focus:outline-none focus:ring-1 focus:ring-primary-500 focus:border-primary-500',
                       data: { search_target: 'input', action: 'input->search#instantSearch' },
                       autocomplete: 'off' %>
    </div>
  <% end %>
</div>
