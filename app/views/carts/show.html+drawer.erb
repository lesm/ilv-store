<%= render 'drawer' do %>
  <div class="relative flex-1 p-3 flex flex-col gap-6 m-2 sm:m-10">
    <h2 class="text-2xl font-bold text-black">Carrito</h2>

    <div id='cart-items' class="flex flex-col gap-4">
      <%= render partial: 'carts/item', collection: current_cart.items %>
    </div>

    <div class="sm:px-6 inline-flex items-center rounded-lg justify-center text-sm font-medium leading-none">
      <svg class="text-magenta-500 w-5 h-5 lg:me-1" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 4h1.5L9 16m0 0h8m-8 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4Zm8 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4Zm-8.5-3h9.25L19 7H7.312" />
      </svg>
      <h4 id="<%= dom_id(current_cart, :subtotal_drawer) %>" class="font-semibold text-magenta-500">
        <%= render 'carts/subtotal_drawer' %>
      </h4>
    </div>

    <div id="<%= dom_id(current_cart, :link_to_checkout) %>">
      <%= render 'carts/link_to_checkout' %>
    </div>
  </div>
<% end %>
