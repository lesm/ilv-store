<div id="cart-item-<%= item.id %>" class="flex flex-col gap-4">
  <div class="grid grid-cols-4 gap-4">
    <div class="col-span-1">
      <%= image_tag(cover_image(item.cover, variant: :small), class: 'w-16 mx-auto h-full object-contain block') %>
    </div>

    <div class="grid col-span-3 gap-4">
      <div class="flex">
        <a href="#" class="text-wrap text-sm font-semibold leading-none text-black hover:underline">
          <%= item.title %>
          <span class="text-primary-500 font-normal">(<%= item.subtitle %>)</span>
        </a>
      </div>

      <div class="flex flex-col gap-2">
        <div class="flex text-red-500 text-xs">
          <% if item.errors.any? %>
            <ul>
              <% item.errors.each do |error| %>
                <li><%= error.message %></li>
              <% end %>
            </ul>
          <% end %>
        </div>

        <div class="flex flex-row justify-between">
          <div id="<%= dom_id(item, :quantity_form) %>" class="flex flex-col gap-2">
            <div class="flex items-center justify-end gap-6">
              <%= form_with model: item, data: { controller: 'carts--form-quantity' } do |f| %>
                <div class="flex items-center">
                  <button
                    type="button"
                    class="
                      shrink-0 bg-primary-100 hover:bg-primary-200 active:bg-primary-500 inline-flex items-center
                      justify-center border border-primary-300 rounded-md h-5 w-5 focus:ring-primary-100
                      focus:ring-2 focus:outline-none
                    "
                    data-action="click->carts--form-quantity#decrement"
                  >
                    <svg
                      class="w-2.5 h-2.5 text-primary-900"
                      aria-hidden="true"
                      xmlns="http://www.w3.org/2000/svg"
                      fill="none"
                      viewBox="0 0 18 2"
                    >
                      <path
                        stroke="currentColor"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M1 1h16"
                      />
                    </svg>
                  </button>

                  <%= f.text_field :quantity, class: 'shrink-0 text-primary-900 border-0 bg-transparent text-sm font-normal focus:outline-none focus:ring-0 max-w-[2.5rem] text-center', value: item.quantity, readonly: true, required: true, data: { carts__form_quantity_target: 'input' } %>

                  <button
                    type="button"
                    class="
                      shrink-0 bg-primary-100 hover:bg-primary-200 active:bg-primary-500 inline-flex items-center
                      justify-center border border-primary-300 rounded-md h-5 w-5 focus:ring-primary-100
                      focus:ring-2 focus:outline-none
                    "
                    data-action="click->carts--form-quantity#increment"
                  >
                    <svg
                      class="w-2.5 h-2.5 text-primary-900"
                      aria-hidden="true"
                      xmlns="http://www.w3.org/2000/svg"
                      fill="none"
                      viewBox="0 0 18 18"
                    >
                      <path
                        stroke="currentColor"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M9 1v16M1 9h16"
                      />
                    </svg>
                  </button>
                </div>
              <% end %>
            </div>
          </div>

          <div class="flex">
            <p class="mt-0.5 truncate text-sm font-normal text-magenta-500"><%= number_to_currency(item.price) %></p>
          </div>

          <div class="group relative">
            <%= button_to cart_item_path(item), class: 'text-magenta-300 hover:text-magenta-400', method: :delete do %>
              <span class="sr-only"><%= t('.delete_item') %></span>

              <svg
                class="h-4 w-4"
                aria-hidden="true"
                xmlns="http://www.w3.org/2000/svg"
                fill="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  fill-rule="evenodd"
                  d="M2 12a10 10 0 1 1 20 0 10 10 0 0 1-20 0Zm7.7-3.7a1 1 0 0 0-1.4 1.4l2.3 2.3-2.3 2.3a1 1 0 1 0 1.4 1.4l2.3-2.3 2.3 2.3a1 1 0 0 0 1.4-1.4L13.4 12l2.3-2.3a1 1 0 0 0-1.4-1.4L12 10.6 9.7 8.3Z"
                  clip-rule="evenodd"
                />
              </svg>
            <% end %>

            <div
              class="
                absolute z-10 bottom-full right-0 mb-2 hidden group-hover:block bg-gray-800 text-white text-sm px-3
                py-1 rounded whitespace-nowrap
              "
            >
              <%= t('.delete_item') %>

              <div
                class="
                  absolute w-0 h-0 border-l-4 border-r-4 border-t-8 border-l-transparent border-r-transparent
                  border-t-gray-800 top-full right-2
                "
              ></div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="border-b-2 border-primary-300"></div>
</div>
