<nav class="py-4 px-8 bg-white antialiased">
  <div class="max-w-screen-xl mx-auto">
    <div class="flex items-center justify-between">
      <div class="flex items-center space-x-8">
        <div class="shrink-0 flex items-center">
          <%= link_to root_path, class: 'flex items-center' do %>
            <%= image_tag 'ilv-logo.png', class: 'w-auto h-8' %>
            <span class="ml-4 text-2xl text-black font-semibold hidden sm:inline"><%= t('.title') %></span>
          <% end %>
        </div>
      </div>

      <div class="flex items-center lg:space-x-2 gap-3">
        <% if authenticated? %>
          <%= link_to cart_path, class: 'inline-flex items-center rounded-lg justify-center p-2 hover:bg-primary-100 text-sm font-medium leading-none text-primary-800', data: { turbo_frame: :drawer } do %>
            <span class="sr-only">
              Cart
            </span>
            <svg class="w-5 h-5 lg:me-1" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
              <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 4h1.5L9 16m0 0h8m-8 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4Zm8 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4Zm-8.5-3h9.25L19 7H7.312" />
            </svg>
            <span id="<%= dom_id(current_cart, :number_of_items) %>" class="ml-auto bg-primary-500 text-white text-xs font-bold px-2 py-1 rounded-full">
              <%= render 'carts/number_of_items' %>
            </span>
            <svg class="w-4 h-4 text-primary-900 ms-1" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
              <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m19 9-7 7-7-7" />
            </svg>
          <% end %>

          <div class="relative" data-controller="navbar--account-dropdown">
            <button data-action="click->navbar--account-dropdown#toggle click@window->navbar--account-dropdown#outsideClick" type="button" class="inline-flex items-center rounded-lg justify-center p-2 hover:bg-primary-100 text-sm font-medium leading-none text-primary-900">
              <svg class="w-5 h-5 me-1" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
                <path stroke="currentColor" stroke-width="2" d="M7 17v1a1 1 0 0 0 1 1h8a1 1 0 0 0 1-1v-1a3 3 0 0 0-3-3h-4a3 3 0 0 0-3 3Zm8-9a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
              </svg>
              <%= t('.link_to_account') %>
              <svg class="w-4 h-4 text-primary-900 ms-1" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m19 9-7 7-7-7" />
              </svg>
            </button>

            <div class="absolute hidden right-0 z-10 w-56 divide-y divide-primary-100 overflow-hidden overflow-y-auto rounded-lg bg-white antialiased shadow" data-navbar--account-dropdown-target="dropdown">
              <ul class="p-2 text-start text-sm font-medium text-primary-900">
                <li><%= link_to t('.link_to_orders'), orders_path, class: 'inline-flex w-full items-center gap-2 rounded-md px-3 py-2 text-sm hover:bg-primary-100' %></li>
                <li><%= link_to t('.link_to_addresses'), addresses_path, class: 'inline-flex w-full items-center gap-2 rounded-md px-3 py-2 text-sm hover:bg-primary-100' %></li>
              </ul>

              <div class="p-2 text-sm font-medium text-primary-900">
                <%= link_to t('.link_to_signout'), session_path, class: 'inline-flex w-full items-center gap-2 rounded-md px-3 py-2 text-sm hover:bg-primary-100', data: { turbo_method: :delete } %>
              </div>
            </div>
          </div>
        <% else %>
          <div class="flex items-center">
            <ul class="flex flex-row items-center justify-start space-x-1 gap-1 md:gap-3 py-3 sm:justify-center">
              <li>
                <%= link_to t('.link_to_signin'), new_session_path, class: 'flex text-sm font-medium text-primary-800 hover:text-primary-600' %>
              </li>
              <p class="font-medium text-primary-800 hover:text-primary-600">|</p>
              <li>
                <%= link_to t('.link_to_signup'), new_registration_path, class: 'flex text-sm font-medium text-primary-800 hover:text-primary-600' %>
              </li>
            </ul>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</nav>
