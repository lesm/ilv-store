<div id="sidebar" data-controller="sidebar--menu-toggle">
    <button data-sidebar--menu-toggle-target="menu" data-action="click->sidebar--menu-toggle#toggle" data-aria-controls="default-sidebar" type="button" class="flex justify-center w-10 h-10 items-center mt-3 ms-1 text-sm text-gray-500 rounded-lg md:hidden hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200 dark:text-gray-400 dark:hover:bg-gray-700 dark:focus:ring-gray-600">
        <span class="sr-only">Open sidebar</span>
        <svg class="w-6 h-6" aria-hidden="true" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
            <path clip-rule="evenodd" fill-rule="evenodd" d="M2 4.75A.75.75 0 012.75 4h14.5a.75.75 0 010 1.5H2.75A.75.75 0 012 4.75zm0 10.5a.75.75 0 01.75-.75h7.5a.75.75 0 010 1.5h-7.5a.75.75 0 01-.75-.75zM2 10a.75.75 0 01.75-.75h14.5a.75.75 0 010 1.5H2.75A.75.75 0 012 10z"></path>
        </svg>
    </button>

    <aside class="fixed z-50 w-64 h-screen bg-primary-50 transition-transform -translate-x-full md:translate-x-0" aria-label="sidebar" data-sidebar--menu-toggle-target="asidebar">
        <div class="flex flex-col h-full px-4 py-4">
            <div class="shrink-0 flex items-center mb-8">
                <%= link_to backoffice_dashboard_path, class: 'flex items-center' do %>
                    <%= image_tag 'ilv-logo.png', class: 'w-auto h-8 dark:hidden' %>
                    <span class="ml-4 sm:text-lg text-sm text-center text-primary-800 dark:text-white "><%= t('.title') %></span>
                <% end %>
            </div>

            <nav class="flex-1 space-y-2">
                <%= link_to backoffice_products_path, class: 'flex items-center p-3 rounded-lg hover:bg-primary-200 dark:hover:bg-primary-700 text-primary-900 dark:text-white' do %>
                    <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
                    </svg>
                    <%= t('.link_to_products') %>
                <% end %>

                <%= link_to '#', class: 'flex items-center p-3 rounded-lg hover:bg-primary-200 dark:hover:bg-primary-700 text-primary-900 dark:text-white' do %>
                    <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
                    </svg>
                    <%= t('.link_to_physical') %>
                <% end %>
            </nav>

            <div class="mt-auto space-y-2">
                <% if authenticated? %>
                    <%= link_to session_path, class: 'flex items-center p-3 rounded-lg hover:bg-primary-200 dark:hover:bg-primary-700 text-primary-900 dark:text-white', data: { turbo_method: :delete } do %>
                        <svg class="w-5 h-5 mr-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12H4m12 0-4 4m4-4-4-4m3-4h2a3 3 0 0 1 3 3v10a3 3 0 0 1-3 3h-2" />
                        </svg>
                        <%= t('.link_to_signout') %>
                    <% end %>
                <% end %>
            </div>
        </div>
    </aside>
</div>
