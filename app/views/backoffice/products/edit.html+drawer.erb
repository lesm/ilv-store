<%= render 'application/drawer' do %>
  <div class="relative mt-6 flex-1 px-4 flex flex-col gap-6 m-2 sm:m-10" data-controller="addresses--form">
    <%= form_with(model: [:backoffice, @product]) do |form| %>
      <h2 class="text-2xl font-bold text-primary-900 dark:text-white mb-4">
        <%= t('title', scope: 'backoffice.products.edit') %>
      </h2>

      <%= render 'form_fields', form:, product: @product %>

      <%= form.submit t('text_submit_button', scope: 'backoffice.products.edit'), class: 'drawer--form-submit' %>
    <% end %>
  </div>

  <template id="alertTemplate">
    <div class="flash slide-down flex items-center w-full max-w-xs p-4 text-primary-700 bg-primary-100 border border-primary-400 rounded-lg shadow-sm dark:text-primary-400 dark:bg-primary-800 fixed bottom-30 right-5 z-50" role="alert" data-controller="flash" data-flash-target="flash">
      <div class="error-message ms-3 text-sm font-normal"></div>
      <button type="button" class="ms-auto -mx-1.5 -my-1.5 bg-primary-100 text-primary-700 hover:text-primary-900 rounded-lg focus:ring-2 focus:ring-primary-300 p-1.5 hover:bg-primary-300 inline-flex items-center justify-center h-8 w-8 dark:text-primary-500 dark:hover:text-white dark:bg-primary-800 dark:hover:bg-primary-700" aria-label="Close" data-action="click->flash#close">
        <span class="sr-only">Close</span>
        <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
          <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6" />
        </svg>
      </button>
    </div>
  </template>
<% end %>
