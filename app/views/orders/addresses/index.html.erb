<%= turbo_frame_tag :remote_modal do %>
  <dialog data-controller="remote-modal">
    <div class="fixed inset-0 z-50 flex justify-center items-center">
      <div class="relative p-4 w-full h-full max-w-2xl max-h-3/4">
        <!-- Modal content -->
        <div class="relative bg-white rounded-lg shadow-sm">
          <!-- Modal header -->
          <div class="flex items-center justify-between p-4 md:p-5 border-b rounded-t border-primary-200">
            <h3 class="text-xl font-semibold text-black"><%= t('.ship_to') %></h3>

            <button
              type="button"
              class="
                text-primary-400 bg-transparent hover:bg-primary-200 hover:text-primary-500 active:bg-primary-200
                active:text-primary-500 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center
                focus:ring-primary-400 focus:ring-2 focus:outline-none
              "
              data-modal-hide="static-modal"
              data-action="click->remote-modal#close"
            >
              <svg
                class="w-3 h-3"
                aria-hidden="true"
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 14 14"
              >
                <path
                  stroke="currentColor"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"
                />
              </svg>

              <span class="sr-only">Close modal</span>
            </button>
          </div>

          <!-- Modal body -->
          <div class="p-4 md:p-5 space-y-4">
            <ul class="overflow-y-auto max-h-[60vh]">
              <% @addresses.each do |address| %>
                <li class="w-full mb-2 flex gap-4">
                  <%= form_with(url: order_address_path(id: address.id), method: :put, class: 'w-full') do |f| %>
                    <%= f.hidden_field :selected, value: true %>

                    <div
                      class="
                        w-full flex gap-2 rounded-lg border border-primary-300 group hover:bg-primary-600
                        active:bg-primary-600
                      "
                    >
                      <%= f.button nil, class: 'w-full flex flex-col p-4 text-left cursor-pointer', data: { action: 'click->remote-modal#close' } do %>
                        <span class="group-hover:text-white group-active:text-white text-black font-medium">
                          <%= address.full_name %>
                        </span>

                        <span class="group-hover:text-white group-active:text-white text-primary-800">
                          <%= address.short_summary %>
                        </span>
                      <% end %>
                    </div>
                  <% end %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </dialog>
<% end %>
