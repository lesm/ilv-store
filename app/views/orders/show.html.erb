<% content_for :turbo_frame_content do %>
  <%= turbo_frame_tag :drawer, data: { controller: 'drawer', action: 'turbo:before-frame-render->drawer#animate' } %>
<% end %>

<section class="mx-auto max-w-7xl 2xl:px-0">
  <!-- Header Section -->
  <div class="gap-4 sm:flex sm:items-center sm:justify-between">
    <h2 class="text-xl font-semibold text-black sm:text-2xl"><%= t('.title') %></h2>
  </div>

  <div class="mt-6 flex flex-col lg:flex-row gap-6">
    <div class="flex flex-col gap-6">
      <div class="rounded-lg border border-primary-200 bg-white p-6 shadow-sm sm:p-6">
        <div class="flex flex-col gap-2 mb-2">
          <p class="sm:text-base text-sm font-medium text-black"><%= t('order_id', scope: 'orders.show') %></p>
          <p class="text-nowrap sm:text-sm text-xs font-mono text-primary-600"><%= @order.id %></p>
        </div>
        <div class="grid grid-cols-2 sm:grid-cols-3 gap-2 mb-2">
          <div class="space-y-1">
            <p class="sm:text-base text-sm font-medium text-black"><%= t('date', scope: 'orders.show') %></p>
            <p class="sm:text-sm text-xs text-primary-600 "><%= l(@order.created_at, format: :short_with_year) %></p>
          </div>
        </div>

        <div class="flex justify-between items-center">
          <div class="space-y-1">
            <p class="sm:text-base text-sm font-medium text-black"><%= t('workflow_status', scope: 'orders.show') %></p>
          </div>
          <span class="inline-flex items-center gap-1.5 rounded-full px-3 py-1 text-xs font-medium bg-primary-100 text-primary-800/30 ring-1 ring-inset ring-primary-600/20/30">
            <svg class="h-3 w-3 shrink-0" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
              <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.5 4h-13m13 16h-13M8 20v-3.333a2 2 0 0 1 .4-1.2L10 12.6a1 1 0 0 0 0-1.2L8.4 8.533a2 2 0 0 1-.4-1.2V4h8v3.333a2 2 0 0 1-.4 1.2L13.957 11.4a1 1 0 0 0 0 1.2l1.643 2.867a2 2 0 0 1 .4 1.2V20H8Z" />
            </svg>
            <span><%= @order.class.human_attribute_name("workflow_status.#{@order.workflow_status}") %></span>
          </span>
        </div>
      </div>

      <!-- Delivery Address Section -->
      <div class="rounded-lg border border-primary-200 bg-white p-6 shadow-sm space-y-4">
        <h3 class="text-xl font-bold text-black">
          <%= t('delivery_address', scope: 'orders.show') %>
        </h3>

        <h4 class="sm:text-base text-sm font-semibold text-black mb-2">
          <%= @order.address.full_name %>
        </h4>
        <div class="space-y-1 sm:text-sm text-xs text-primary-600">
          <%= @order.address.short_summary %>
        </div>
      </div>
    </div>
    <!-- Order Summary Card -->
    <!-- Products Section -->
    <div class="flex flex-col rounded-lg border border-primary-200 bg-white p-6 gap-4">
      <h3 class="text-xl font-bold text-black">
        <%= t('products', scope: 'orders.show') %>
      </h3>

      <div class="flex flex-col gap-4 mt-4">
        <% @order.items.each do |item| %>
          <div class="grid grid-cols-4 gap-4">
            <div class="col-span-1">
              <%= image_tag(cover_image(item.cover, variant: :small), class: 'w-16 mx-auto h-full object-contain block') %>
            </div>
            <div class="grid col-span-3 gap-2">
              <div class="flex">
                <a href="#" class="text-wrap text-sm font-semibold leading-none text-black hover:underline">
                  <%= item.title %>
                  <span class="text-primary-500 font-normal">(<%= item.subtitle %>)</span>
                </a>
              </div>

              <div class="flex flex-row justify-between">
                <div class="flex items-center justify-end gap-6">
                  <div class="flex items-center">
                    <p class="text-sm font-medium"><%= t('.quantity') %> <%= item.quantity %></p>
                  </div>
                </div>

                <div class="flex">
                  <p class="mt-0.5 truncate text-sm font-normal text-magenta-500">
                    <%= number_to_currency(item.price) %>
                  </p>
                </div>
              </div>
            </div>
          </div>
          <div class="border-b-2 border-primary-300"></div>
        <% end %>
      </div>
      <!-- Order Summary -->
      <div class="space-y-3">
        <!-- Subtotal -->
        <div class="flex flex-row justify-between items-center">
          <p class="text-xs sm:text-sm font-normal text-primary-600"><%= t('.subtotal') %></p>
          <p class="text-xs sm:text-sm font-medium text-black">
            <%= number_to_currency(@order.subtotal) %>
          </p>
        </div>

        <!-- Label Price (Shipping) -->
        <div class="flex flex-row justify-between items-center">
          <div class="flex items-center gap-2">
            <svg class="h-4 w-4 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4" />
            </svg>
            <p class="text-xs sm:text-sm font-normal text-primary-600"><%= t('.label_price') %></p>
          </div>
          <p class="text-xs sm:text-sm font-medium text-black">
            <%= number_to_currency(@order.label_price) %>
          </p>
        </div>

        <!-- Divider -->
        <div class="border-t-2 border-primary-300"></div>

        <!-- Total -->
        <div class="flex flex-row justify-between items-center">
          <p class="text-sm sm:text-base font-semibold text-black"><%= t('.total') %></p>
          <p class="text-sm sm:text-base font-bold text-magenta-500">
            <%= number_to_currency(@order.total) %>
          </p>
        </div>
      </div>
    </div>
  </div>
</section>
