<div style="max-width: 600px; margin: 0 auto; background-color: #ffffff; border-radius: 8px; overflow: hidden; box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);">
  <!-- Header -->
  <div style="background-color: #3f6900; padding: 24px; text-align: center;">
    <h1 style="color: #ffffff; font-size: 24px; font-weight: 600; margin: 0;"><%= t('.title') %></h1>
  </div>

  <!-- Content -->
  <div style="padding: 24px;">
    <p style="font-size: 16px; line-height: 24px; margin-bottom: 24px;">
      <%= t('.header_content', name: @order.user.name, order_id: @order.id).html_safe %>
    </p>

    <h2 style="font-size: 18px; font-weight: 600; color: #3f6900; margin-bottom: 16px; border-bottom: 1px solid #e5e7eb; padding-bottom: 8px;"><%= t('.order_summary') %></h2>

    <!-- Order Items -->
    <% @order.items.each do |item| %>
      <div style="display: flex; margin-bottom: 16px; padding-bottom: 16px; border-bottom: 1px solid #e5e7eb;">
        <div style="flex-shrink: 0; width: 80px; height: 80px; background-color: #f9fafb; border-radius: 4px; margin-right: 16px; overflow: hidden;">
          <img src="https://flowbite.s3.amazonaws.com/blocks/e-commerce/imac-front-dark.svg" alt="<%= item.product.name %>" style="width: 100%; height: 100%; object-fit: cover;">
        </div>
        <div style="flex-grow: 1;">
          <h3 style="font-size: 16px; font-weight: 600; color: #3f6900; margin: 0 0 4px 0;"><%= item.product.name %></h3>
          <p style="font-size: 14px; color: #6b7280; margin: 0 0 4px 0;"><%= t('.quantity') %> <%= item.quantity %></p>
          <p style="font-size: 16px; font-weight: 600; color: #111827; margin: 0;"><%= number_to_currency(item.price) %></p>
        </div>
      </div>
    <% end %>

    <!-- Order Totals -->
    <div style="margin-top: 24px; background-color: #f9fafb; border-radius: 4px; padding: 16px;">
      <div style="display: flex; justify-content: space-between; margin-bottom: 8px;">
        <span style="font-size: 14px; color: #3f6900;"><%= t('.subtotal') %></span>
        <span style="font-size: 14px; font-weight: 600;"><%= number_to_currency(@order.subtotal) %></span>
      </div>
      <div style="display: flex; justify-content: space-between; margin-top: 12px; padding-top: 12px; border-top: 1px solid #e5e7eb;">
        <span style="font-size: 16px; color: #3f6900; font-weight: 600;"><%= t('.total') %></span>
        <span style="font-size: 16px; font-weight: 600;"><%= number_to_currency(@order.total) %></span>
      </div>
    </div>

    <!-- Status Message -->
    <div style="margin-top: 24px; padding: 16px; background-color: #fcf0fb; border-radius: 4px; text-align: center;">
      <p style="font-size: 16px; color: #6e0044; margin: 0;">
        <strong><%= t('.status') %></strong> <%= t('.status_message') %>
      </p>
    </div>

    <div style="margin-top: 32px; text-align: center;">
      <a href="<%= orders_url %>" style="display: inline-block; background-color: #3f6900; color: #ffffff; font-size: 16px; font-weight: 600; padding: 12px 24px; border-radius: 4px; text-decoration: none;"><%= t('.see_order') %></a>
    </div>
  </div>
</div>
