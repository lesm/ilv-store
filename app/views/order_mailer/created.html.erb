<table width="100%" cellpadding="0" cellspacing="0" border="0" align="center" bgcolor="#f3f4f6" style="padding: 24px 0;">
  <tr>
    <td align="center">
      <table width="700" cellpadding="0" cellspacing="0" border="0" style="width: 100%; max-width: 700px; background-color: #ffffff; border-radius: 8px; overflow: hidden; box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);">
        <!-- Header -->
        <tr>
          <td align="center" bgcolor="#3f6900" style="padding: 24px;">
            <h1 style="color: #ffffff; font-size: 24px; font-weight: 600; margin: 0;"><%= t('.title') %></h1>
          </td>
        </tr>

        <!-- Body -->
        <tr>
          <td align="center" style="padding: 24px;">
            <!-- Greeting -->
            <p style="font-size: 16px; line-height: 24px; margin-bottom: 24px;">
              <%= t('.header_content', name: @order.user.name, order_id: @order.id).html_safe %>
            </p>

            <!-- Order summary heading -->
            <h2 style="font-size: 18px; font-weight: 600; color: #3f6900; margin-bottom: 16px; border-bottom: 1px solid #e5e7eb; padding-bottom: 8px;">
              <%= t('.order_summary') %>
            </h2>

            <!-- Items -->

            <table width="60%" cellpadding="0" cellspacing="0" border="0" style="border-collapse: collapse;">
              <% @order.items.each do |item| %>
                <tr>
                  <td style="padding: 16px 0; border-bottom: 1px solid #e5e7eb;">
                    <table width="100%" cellpadding="0" cellspacing="0" border="0">
                      <tr>
                        <!-- Product image -->
                        <td width="80" valign="top" style="padding-right: 16px;">
                          <%= image_tag(
                                cover_image(item.cover, variant: :small),
                                alt: item.title,
                                width: '80',
                                height: '100',
                                style: 'background-color: #f9fafb; border-radius: 4px; display: block; object-fit: cover; border: 0; line-height: 100%; outline: none; text-decoration: none;'
                              ) %>
                        </td>

                        <!-- Product details -->
                        <td valign="top" width="100%" style="text-align: right;">
                          <table width="100%" cellpadding="0" cellspacing="0" border="0">
                            <tr>
                              <td style="font-size: 16px; font-weight: 600; color: #3f6900; padding-bottom: 4px; text-align: right;">
                                <%= item.title %>
                              </td>
                            </tr>
                            <tr>
                              <td style="font-size: 14px; color: #6b7280; padding-bottom: 4px; text-align: right;">
                                <%= t('.quantity') %> <%= item.quantity %>
                              </td>
                            </tr>
                            <tr>
                              <td style="font-size: 16px; font-weight: 600; color: #111827; text-align: right;">
                                <%= number_to_currency(item.price) %>
                              </td>
                            </tr>
                          </table>
                        </td>
                      </tr>
                    </table>
                  </td>
                </tr>
              <% end %>
            </table>

            <!-- Subtotal/Total -->
            <table width="60%" cellpadding="0" cellspacing="0" border="0" style="margin-top: 24px; background-color: #f9fafb; border-radius: 4px; padding: 16px;">
              <tr>
                <td style="font-size: 14px; color: #3f6900; padding: 4px 0; width: 50%;"> <%= t('.subtotal') %> </td>
                <td style="font-size: 14px; font-weight: 600; text-align: right; padding: 4px 0; width: 50%;">
                  <%= number_to_currency(@order.subtotal) %>
                </td>
              </tr>
              <tr>
                <td colspan="2" style="border-top: 1px solid #e5e7eb; padding-top: 12px;"></td>
              </tr>
              <tr>
                <td style="font-size: 16px; font-weight: 600; color: #3f6900; padding: 8px 0 4px 0;"><%= t('.total') %></td>
                <td style="font-size: 16px; font-weight: 600; text-align: right; padding: 8px 0 4px 0;"><%= number_to_currency(@order.total) %></td>
              </tr>
            </table>

            <!-- Status message -->
            <table width="100%" cellpadding="0" cellspacing="0" border="0" style="margin-top: 24px; background-color: #fcf0fb; border-radius: 4px; text-align: center;">
              <tr>
                <td style="padding: 16px;">
                  <p style="font-size: 16px; color: #6e0044; margin: 0;">
                    <strong><%= t('.status') %></strong> <%= t('.status_message') %>
                  </p>
                </td>
              </tr>
            </table>

            <!-- CTA Button -->
            <table width="100%" cellpadding="0" cellspacing="0" border="0" style="margin-top: 32px;">
              <tr>
                <td align="center">
                  <a href="<%= orders_url %>" style="display: inline-block; background-color: #3f6900; color: #ffffff; font-size: 16px; font-weight: 600; padding: 12px 24px; border-radius: 4px; text-decoration: none;">
                    <%= t('.see_order') %>
                  </a>
                </td>
              </tr>
            </table>
          </td>
        </tr>
      </table>
    </td>
  </tr>
</table>
